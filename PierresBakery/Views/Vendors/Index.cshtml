<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendors</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
      @using PierresBakery.Models;

      <h1>Vendors</h1>

  @if (@Model.Count == 0)
  {
          <h3>You have no vendors on your list!</h3>
  }

  @foreach (Vendors vendor in Model)
  {
          <h3><a href="/vendors/@vendor.Id">@vendor.VendorName</a></h3>
  }

      <p><a href="/">Go back home</a></p>
  </body>
</html>