<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><Title></Title></title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
  @using PierresBakery.Models;

    <h1>Orders</h1>

  @if (Model.Count == 0)
  {
          <p>There are no orders in the list.</p>
  }
  @* List of orders from vendors *@
    <ul>
    @foreach (Order order in Model)
    {
              <li><a href='orders/@order.Id'>@order.OrderDescription</a></li>
    }

    </ul>
  @* List of purchased  *@
    <a href="/orders/new">Add a new item.</a>

    <form action ="/orders/delete" method="post">
        <button type="submit" name="button">Clear All Orders</button>
    </form>
  </body>
</html>